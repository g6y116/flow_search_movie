<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="large_text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="medium_text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="small_text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="solid_button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/btn_solid</item>
    </style>

    <style name="chip">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">@dimen/line</item>
        <item name="chipStrokeColor">@color/gray_4</item>
        <item name="chipCornerRadius">@dimen/chip_radius</item>
        <item name="chipMinTouchTargetSize">@dimen/zero</item>
    </style>

    <style name="bottom_sheet" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottom_sheet_background</item>
    </style>

    <style name="bottom_sheet_background" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="bottom_sheet_item">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>